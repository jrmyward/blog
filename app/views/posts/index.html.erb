<% content_for :title,  "Blog" %>

<%= render :partial => "shared/page_title",
  :locals => {:title => "Blog", :icon_class => "ico-pencil"} %>

<div class="row">
  <div class="span12">
    <%= link_to raw('<i class="icon-plus icon-white"></i> New Post'), new_post_path, class: "btn btn-primary pull-right" %>
  </div><!-- .span12 -->
</div><!-- .row -->

<% if @posts.count > 0 %>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.slug %></td>
      <td><%= post.description %></td>
      <td><%= post.abstract %></td>
      <td><%= post.body %></td>
      <td><%= post.published_at %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
<% else %>
  <div class="alert alert-info">
    No posts were found.
  </div><!-- .alert alert-info -->
<% end %>
