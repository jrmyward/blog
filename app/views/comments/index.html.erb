<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Email</th>
      <th>Site url</th>
      <th>User ip</th>
      <th>User agent</th>
      <th>Referrer</th>
      <th>Approved</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.email %></td>
        <td><%= comment.site_url %></td>
        <td><%= comment.user_ip %></td>
        <td><%= comment.user_agent %></td>
        <td><%= comment.referrer %></td>
        <td><%= comment.approved %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

