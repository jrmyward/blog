<div class="headline">
  <% if comment.new_record? %>
    <span class="position">New comment as</span>
  <% end %>
  <span class="name">
    <% if comment.site_url %>
      <%= link_to comment.name, fix_url(comment.site_url), :rel => "nofollow" %>
    <% else %>
      <%= comment.name %>
    <% end %>
    <% if params[:controller] != "posts" %>
      on <%= link_to comment.post.title, posts_path(comment.commentable, :view => "comments", :anchor => "comment_#{comment.id}") %>
    <% end %>
  </span>
  <% unless comment.created_at.nil? %>
    <%= link_to posts_path(comment.commentable, :view => "comments", :anchor => "comment_#{comment.id}"), :class => "created_at" do %>
      <% if params[:controller] == "posts" %>
        <%= time_ago_in_words comment.created_at %> ago
      <% else %>
        <%= comment.created_at.strftime("%Y-%m-%d %H:%M:%I") %>
      <% end %>
    <% end %>
  <% end %>
</div>
