%header
  .container
    .navbar
      .navbar-inner
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to root_path, :class => "brand" do
          %i.ico-compass.ico-color.circle
          - if browser.mobile?
            Wayward
            %span Traveler
          - else
            The Wayward
            %span Traveler
        .nav-collapse.collapse
          %ul.nav
            - if user_signed_in? and (current_user.author? or current_user.admin?)
              %li= nav_link "Admin Dashboard", admin_root_path
            - else
              %li= nav_link "Blog", posts_path, /^\/blog/