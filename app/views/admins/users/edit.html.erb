<% content_for :title,  "Edit User" %>

<%= render :partial => "shared/page_title",
  :locals => {:title => "Edit User", :icon_class => "ico-pencil"} %>

<div class="content clearfix">
  <div class="span11">
    <div class="row">
      <div class="span7">
        <%= simple_form_for [:user, @user], :url => user_path(@user), :html => { :class => 'well form-horizontal' } do |f| %>
          <%= render :partial => 'form', :locals => {:f => f, :user => @user} %>
          <div class="form-actions">
            <%= f.submit "Save Profile", :class => "btn btn-primary" %>
          </div>
        <% end %>
      </div><!-- .span11 -->
      <div class="span4">
      </div><!-- .span4 -->
    </div><!-- .row -->

  </div><!-- .span11 -->
</div><!-- .content -->

<hr />